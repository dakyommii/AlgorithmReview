#include <iostream>
#include <algorithm>
using namespace std;

int dp[1000001];

int main(){
	int N;
	cin >> N;

	dp[2] = 1;
	dp[3] = 1;
	dp[4] = 2;

	for (int i = 5; i <= N; i++) {
		if (i % 2 != 0 && i % 3 != 0)	//2와 3으로 나누어 떨어지지 않을 경우
			dp[i] = 1 + dp[i - 1];
		else if (i % 2 == 0 && i % 3 == 0) {	//2와 3 모두로 나누어 떨어질 경우
			dp[i] = min(1 + dp[i / 2], 1 + dp[i / 3]);
		}
		else if (i % 2 == 0) {	//2로 나누어 떨어질 경우
			dp[i] = min(1 + dp[i / 2], 1 + dp[i - 1]);
		}
		else if (i % 3 == 0) {	//3으로 나누어 떨어질 경우
			dp[i] = min(1 + dp[i / 3], 1 + dp[i - 1]);
		}
	}

	cout << dp[N] << endl;

	return 0;

	}

