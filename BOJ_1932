#include <iostream>
#include <algorithm>
using namespace std;

int triangle[501][501];
int answer = 0;

int main(){
	int N;
	cin >> N;

	for (int i = 1; i <= N; i++) {
		for (int j = 1; j <= i; j++) {
			cin >> triangle[i][j];
		}	
	}

	for (int i = 2; i <= N; i++) {
		for (int j = 1; j <= i; j++) {
			if (j == 1)	triangle[i][j] += triangle[i - 1][j];
			else if (j == N) triangle[i][j] += triangle[i - 1][j - 1];
			else
			{
				triangle[i][j] += max(triangle[i - 1][j - 1], triangle[i - 1][j]);
			}
		}
	}

	for (int i = 1; i <= N; i++) {
		answer = max(answer, triangle[N][i]);
	}

	cout << answer << endl;

	return 0;

	}

